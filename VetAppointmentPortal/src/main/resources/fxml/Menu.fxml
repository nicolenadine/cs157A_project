<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<HBox fx:id="mainBox" prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.vetportal.controller.MenuController">

   <children>
      <AnchorPane prefWidth="300.0" style="-fx-background-color: gray;">
         <children>
            <Button layoutX="15" layoutY="15" onAction="#showHome" text="Home">
               <font><Font size="15.0" /></font>
            </Button>
            <Button layoutX="45.0" layoutY="475" onAction="#showCreateAppointment" prefHeight="40.0" prefWidth="200.0" text="Create Appointment">
               <font><Font name="Apple SD Gothic Neo Regular" size="15.0" /></font>
            </Button>
            <Button layoutX="45.0" layoutY="635.0" onAction="#showCustomerSearch" prefHeight="40.0" prefWidth="200.0" text="Search Customer">
               <font><Font size="15.0" /></font>
            </Button>
            <Button layoutX="45.0" layoutY="555.0" onAction="#showEditAppointment" prefHeight="40.0" prefWidth="200.0" text="Edit/Delete Appointment">
               <font><Font size="15.0" /></font>
            </Button>

            <Label layoutX="65.0" layoutY="315" text="Hello, User!">
               <font><Font name="Apple SD Gothic Neo Bold" size="30.0" /></font>
            </Label>

            <Label fx:id="dateTime" layoutX="17.0" layoutY="382.0" text="EEEE, MMMM d HH:mm">
               <font><Font size="25.0" /></font>
            </Label>

            <Circle fx:id="profileImage" fill="DODGERBLUE" layoutX="145.0" layoutY="190.0" radius="115.0" />
            <Button layoutX="45.0" layoutY="715.0" onAction="#showEmployeeSearch" prefHeight="40.0" prefWidth="200.0" text="Search Employee">
               <font>
                  <Font size="15.0" />
               </font>
            </Button>
         </children>
      </AnchorPane>
   </children>
</HBox>
